<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER REGISTER"
        android:layout_gravity="center"
        android:textSize="25sp"
        />

    <EditText
        android:id="@+id/Text_usuario000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="USER"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/Text_password000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/Text_password001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RE-REGISTER PASSWORD"
        android:inputType="textPassword"
        />




    <Button
        android:id="@+id/Btn_registrar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TO REGISTER"
        android:layout_gravity="center"/>





</LinearLayout>